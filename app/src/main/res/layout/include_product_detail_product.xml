<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anchor_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/white">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <com.xiling.ddui.custom.DDSquareBanner
            android:id="@+id/dd_square_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_sold_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#50202020"
            android:gravity="center"
            android:text="已售罄"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/indicator_bg"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="1/1"
            android:textColor="#adffffff"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <!--价格区域-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:id="@+id/tv_discount_price_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_15"
            android:gravity="center"
            android:background="@drawable/bg_special_price"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="#fffdddab"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_minPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:id="@+id/tv_minMarketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <!--商品基础信息-->
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_become_master_guide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_member_ship"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <ImageView
            android:id="@+id/iv_anchor_left"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_crown" />

        <ImageView
            android:id="@+id/tv_become_master"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/become_master" />

        <TextView
            android:id="@+id/tv_reward_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/tv_become_master"
            android:layout_toRightOf="@id/iv_anchor_left"
            android:textColor="#DCB982"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_sale_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_13" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_sale_size" />


    </RelativeLayout>


    <include layout="@layout/include_divider_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_anchor_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="规格"
            android:textColor="@color/ddm_gray_dark"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/relSkuInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_anchor_left">

            <TextView
                android:id="@+id/tvSkuInfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="#202020"
                android:maxLines="1"
                android:orientation="horizontal"
                android:paddingRight="15dp"
                android:textSize="13sp"
                tools:text="请选择规格" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_right" />
        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/include_divider_10" />

</LinearLayout>