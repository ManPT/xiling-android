<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anchor_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/white">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible">

        <com.xiling.ddmall.ddui.custom.DDSquareBanner
            android:id="@+id/dd_square_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_sold_out"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_black_alpha_circle"
            android:gravity="center"
            android:text="已抢光"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="16dp"
            android:background="@drawable/indicator_bg"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="1/1"
            android:textColor="#adffffff"
            android:textSize="16sp"
            android:includeFontPadding="false"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <!--价格区域-->
    <com.xiling.ddmall.ddui.custom.DDProductPriceView
        android:id="@+id/dd_product_price_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.xiling.ddmall.ddui.custom.DDProductPriceView>

    <!--商品基础信息-->
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="12dp"
        android:paddingTop="15dp"
        android:paddingRight="12dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        tools:text="这是商品的标题" />


    <RelativeLayout
        android:id="@+id/rl_become_master_guide"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:background="@mipmap/bg_become_master_guide"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/iv_anchor_left"
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_crown" />

        <TextView
            android:id="@+id/tv_become_master"
            style="@style/TagBlack"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/become_master" />

        <TextView
            android:id="@+id/tv_reward_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/tv_become_master"
            android:layout_toRightOf="@id/iv_anchor_left"
            android:text="升级店主 价格更优惠 购物可返%s元"
            android:textColor="#896306"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ddm_gray_light" />

    <HorizontalScrollView
        android:id="@+id/hsv_product_tag_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_product_tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.DDProductTag"
                android:text="新品"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/include_divider_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_anchor_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="规格"
            android:textColor="@color/ddm_gray_dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvSkuInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/tv_anchor_left"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:textSize="13sp"
            tools:text="请选择规格" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ddm_gray_light" />

    <include layout="@layout/merge_product_stats_layout" />

    <include layout="@layout/include_divider_10" />

    <RelativeLayout
        android:id="@+id/rl_sale_info"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_sale_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="12dp"
            android:text="--人已购买"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sale_info_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:paddingLeft="12dp"
            android:text="共售出--件"
            android:textColor="@color/ddm_gray_dark"
            android:textSize="10sp" />

        <com.xiling.ddmall.ddui.custom.DDAvatarContainerView
            android:id="@+id/dd_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            app:avatarRadius="30dp">

        </com.xiling.ddmall.ddui.custom.DDAvatarContainerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ddm_gray_light" />

    </RelativeLayout>

    <ViewStub
        android:id="@+id/vs_measurement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/include_product_measurement" />

</LinearLayout>