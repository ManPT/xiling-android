<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ddui.activity.StoreNameEditActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="请输入30个字以内的公告"
        android:textColor="@color/ddm_gray_dark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_store_desc"
            style="@style/DDMEditText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="38dp"
            android:gravity="top"
            android:maxLength="30"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textSize="16sp"
            tools:text="Jigsaw的店铺" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_clean_gray" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_btn_save"
            style="@style/MyButton.DDMRed"
            android:layout_gravity="bottom"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="保存" />
    </FrameLayout>


</LinearLayout>