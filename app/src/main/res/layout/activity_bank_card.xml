<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ddm_gray_background">

    <LinearLayout
        android:id="@+id/ll_none_bank_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:src="@mipmap/bank_card_gray" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="您还没有添加银行卡吆~"
            android:textColor="@color/ddm_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_btn_add_bank_card"
            style="@style/MyButton.DDMRed.Middle"
            android:layout_width="168dp"
            android:layout_marginTop="22dp"
            android:text="添加银行卡" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_user_bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/red_radius_middle"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_bank"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/icon_circle_forward" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sdv_bank"
                android:paddingTop="4dp"
                android:text="**斯"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_bank_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_toRightOf="@id/sdv_bank"
                android:paddingTop="10dp"
                android:text="****************8987"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_bank_card_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_bank_card_number"
                android:layout_toRightOf="@id/sdv_bank"
                android:paddingTop="10dp"
                android:text="山东省青岛市香港中路"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="招商银行"
                android:textColor="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_btn_change_bank_card"
                style="@style/MyButton.DDMRed"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="修改银行卡" />

            <TextView
                android:id="@+id/tv_btn_security"
                style="@style/MyButton.Stroke"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="设置安全问题" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:paddingBottom="20dp"
                android:text="温馨提示：账户提现必须回答安全问题"
                android:textColor="@color/ddm_gray_dark"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>