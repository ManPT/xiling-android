<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/section_border"
    android:padding="15dp">

    <ImageView
        android:id="@+id/itemIconIv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/itemTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/itemIconIv"
        android:text="Label"
        android:textColor="@color/default_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/itemDescTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/itemTitleTv"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/itemIconIv"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:text="Desc"
        android:textColor="@color/grayDark"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/itemTickIv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/icon_tick_hd"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>