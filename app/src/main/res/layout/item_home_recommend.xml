<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_285"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bgdge"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8" />

    <RelativeLayout
        android:layout_width="@dimen/dp_137"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_16"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="#50202020"
            android:visibility="gone"
            android:text="已下架"
            />


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_27"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ff282828"
        android:textSize="@dimen/sp_13" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_11" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_discount_price_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffa6251a"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_13"
            android:gravity="center"
            android:text="优惠价"
            android:textColor="#fffdddab"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_minPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_minMarketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_4"
            />

    </LinearLayout>

</LinearLayout>
