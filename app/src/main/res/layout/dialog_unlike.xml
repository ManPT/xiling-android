<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/SharePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cancelLikeBtn"
            style="@style/DialogLikeItem"
            android:background="@drawable/bg_dialog_share_wx">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="取消喜欢"
                android:textColor="#424242"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/shareCircleBtn"
                style="@style/DialogLikeItem"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/cancelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="取 消"
                    android:textColor="#424242"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View style="@style/WXShareLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="33dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/SharePanel"
        android:layout_alignParentTop="true"
        android:background="@color/transparent" />

</RelativeLayout>