<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.xiling.ddui.activity.BindPhoneNumberActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可以使用该手机直接登陆"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#ffaaaaaa"
        android:textSize="@dimen/sp_12"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前绑定手机号"
        android:textColor="#ffaaaaaa"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_52"
        />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
     />

    <TextView
        android:id="@+id/tv_btn_change_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="#DCB982"
        android:background="@drawable/btn_strok_password"
        android:text="更换手机号" />


</LinearLayout>