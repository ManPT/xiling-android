<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/user_pic_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_15"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_17"
        android:singleLine="true"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/user_pic_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="多美优品官方朋友圈"
        />

    <TextView
        android:id="@+id/send_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_10"
        android:layout_marginTop="@dimen/distance_2"
        android:singleLine="true"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/user_pic_iv"
        app:layout_constraintTop_toBottomOf="@id/user_name_tv"
        tools:text="2017-12-27 20:30"
        />

    <com.xiling.ddmall.shared.component.ExpandableTextView
        android:id="@+id/user_send_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/distance_15"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/distance_5"
        app:layout_constraintLeft_toRightOf="@id/user_pic_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_pic_iv"
        >

        <TextView
            android:id="@id/id_source_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/color_33"
            android:textSize="@dimen/text_size_14sp"
            />

        <TextView
            android:id="@id/id_expand_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展开"
            android:textColor="@color/blue_more"/>

    </com.xiling.ddmall.shared.component.ExpandableTextView>

    <RelativeLayout
        android:id="@+id/diffierent_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/distance_15"
        android:layout_marginStart="@dimen/distance_65"
        android:layout_marginTop="@dimen/distance_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_send_content_tv"
        app:layout_goneMarginTop="0dp">

        <com.xiling.ddmall.module.community.MyGrildView
            android:id="@+id/user_pic_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="@dimen/distance_5"
            android:numColumns="3"
            android:verticalSpacing="@dimen/distance_5"
            android:visibility="visible"
            tools:listitem="@layout/item_gallery_layout"
            tools:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/do_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/distance_15"
        android:paddingStart="@dimen/distance_65"
        android:weightSum="4"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diffierent_layout"
        >

        <TextView
            android:id="@+id/save_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/distance_5"
            android:drawableStart="@drawable/ic_save"
            android:paddingBottom="@dimen/distance_15"
            android:paddingTop="@dimen/distance_15"
            android:text="@string/s_save_text"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/forward_tv"
            />

        <TextView
            android:id="@+id/forward_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/distance_5"
            android:drawableStart="@drawable/ic_forward"
            android:paddingBottom="@dimen/distance_15"
            android:paddingTop="@dimen/distance_15"
            android:text="@string/s_forward_text"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_size_14sp"
            />

        <TextView
            android:id="@+id/lease_msg_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/distance_5"
            android:drawableStart="@drawable/ic_leave_msg"
            android:paddingBottom="@dimen/distance_15"
            android:paddingTop="@dimen/distance_15"
            android:text="@string/s_leave_msg_text"
            android:textColor="@color/color_99"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/like_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/distance_15"
            android:paddingTop="@dimen/distance_15"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/live_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like_default"
                android:textColor="@color/color_99"
                android:textSize="@dimen/text_size_14sp"/>

            <TextView
                android:id="@+id/live_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/distance_5"
                android:text="1588"
                android:textColor="@color/color_99"
                android:textSize="@dimen/text_size_14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assient_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/distance_15"
        android:layout_marginStart="@dimen/distance_65"
        android:background="@color/color_f5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/distance_10"
        android:paddingEnd="@dimen/distance_10"
        android:paddingStart="@dimen/distance_10"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/do_layout"
        app:layout_goneMarginTop="0dp"
        />

    <View
        android:id="@+id/item_bottom_line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginRight="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_15"
        android:background="@color/color_e6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assient_layout"
        app:layout_goneMarginBottom="@dimen/distance_15"
        app:layout_goneMarginTop="0dp"
        />
</android.support.constraint.ConstraintLayout>