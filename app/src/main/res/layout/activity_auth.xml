<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ddm_gray_background"
    tools:context=".ddui.activity.AuthActivity">

    <LinearLayout
        android:id="@+id/ll_none_auth_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:src="@mipmap/idcard_front" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="您还没有添加实名认证信息哦~"
            android:textColor="@color/ddm_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/auth_tip_bg"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="填写身份证号与上传身份证信息不匹配，请重新上传"
            android:textColor="@color/grayDark"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_btn_auth"
            style="@style/MyButton.DDMRed.Middle"
            android:layout_width="168dp"
            android:layout_marginTop="22dp"
            android:text="添加实名认证" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_auth_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="当前绑定认证信息"
            android:textColor="@color/ddm_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/white_radius_8"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tv_auth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_auth_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1232123*******2134"
                android:textSize="12dp" />

            <TextView
                style="@style/MyButton.DDMRed.Middle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="身份已验证"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:text="通过实名认证后，信息将不可进行修改"
            android:textColor="@color/ddm_gray_dark" />

    </LinearLayout>
</FrameLayout>