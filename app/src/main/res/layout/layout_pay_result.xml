<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingTop="40dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_pay_img"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:minHeight="88dp"
        android:src="@mipmap/ic_pay_dealing"
        tools:background="@color/ddm_gray_background"
        tools:layout_height="88dp" />

    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="支付成功"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_pay_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="订单处理中..."
        android:textColor="@color/ddm_gray_dark" />

    <TextView
        android:id="@+id/tv_pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="支付方式："
        android:textColor="@color/ddm_gray_dark"
        android:visibility="gone"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/tv_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="支付金额：--"
        android:textColor="@color/ddm_gray_dark"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_btn_left"
            style="@style/MyButton.StrokeRed_R15"
            android:text="查看订单" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/tv_btn_right"
            style="@style/MyButton.DDMRed.R15"
            android:text="返回首页" />
    </LinearLayout>

</LinearLayout>