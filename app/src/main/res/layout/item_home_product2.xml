<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/item_home_product_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_product"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_image"
         />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdv_product"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="12131"
        android:textColor="@color/ddm_black_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="sdfsdfsfs"
        android:textColor="@color/ddm_gray_dark"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sub_title"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_money_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19.9"
            android:textColor="@color/ddm_red"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_money_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_money_now"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_money_now"
            android:text="32.1"
            android:textColor="@color/ddm_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:text="省钱购"
            android:textColor="@color/ddm_gray_dark"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>