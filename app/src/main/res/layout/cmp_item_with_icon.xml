<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/itemLabelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/default_image"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minEms="3"
        android:padding="3.3dp"
        android:textSize="10sp"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewTag"
        />

    <TextView
        android:id="@+id/itemBadgeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/itemLabelTv"
        android:background="@drawable/order_badge"
        android:gravity="center"
        android:minHeight="15dp"
        android:minWidth="15dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_toRightOf="@id/viewTag"
        />
</RelativeLayout>
