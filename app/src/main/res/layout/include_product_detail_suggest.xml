<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_product_suggest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:background="@color/white"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_suggest_tag"
            style="@style/TextView.LeftRedTag"
            android:text="大家都在买" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

    </android.support.v4.view.ViewPager>

    <com.xiling.ddui.custom.DDIndicator
        android:id="@+id/dd_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="26dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

    </com.xiling.ddui.custom.DDIndicator>

    <include layout="@layout/include_divider_10" />
</LinearLayout>