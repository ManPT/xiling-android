<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_117"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel_icon"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_96"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/rel_icon">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="@dimen/dp_20"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_name"
            android:layout_marginTop="@dimen/dp_7"
            android:ellipsize="end"
            android:ems="9"
            android:lines="1"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#ff202020"
            android:textSize="@dimen/sp_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_price"
            android:layout_marginBottom="@dimen/dp_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¥"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_discount_price_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa6251a"
                android:textSize="@dimen/sp_18" />


            <TextView
                android:id="@+id/tv_taxation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@drawable/bg_price_red"
                android:paddingLeft="@dimen/dp_3"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="#ffffffff"
                android:visibility="gone"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#ff202020"
            android:textSize="13sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5" />

</RelativeLayout>
