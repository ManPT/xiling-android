<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_img"
        style="@style/DefaultSimpleDraweeView"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        app:roundedCornerRadius="3dp" />

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sdv_img"
        android:layout_toRightOf="@id/sdv_img"
        android:text=""
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_product_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_title"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/sdv_img"
        android:text=""
        android:textColor="@color/ddm_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sdv_img"
        android:layout_toRightOf="@id/sdv_img"
        android:text=""
        android:textColor="@color/ddm_red"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sdv_img"
        android:layout_alignParentRight="true"
        android:text=""
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/sdv_img"
        android:background="@color/ddm_gray_light" />
</RelativeLayout>