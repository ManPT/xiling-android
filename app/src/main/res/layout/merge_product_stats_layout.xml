<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/productAuthLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="服务"
            android:textColor="@color/ddm_gray_dark"
            android:textSize="13sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivProductAuth1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/default_image"
            fresco:placeholderImageScaleType="fitXY"
            fresco:viewAspectRatio="1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvProductAuth1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="7天无理由退换"
            android:textColor="@color/ddm_black_dark"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivProductAuth2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/default_image"
            fresco:placeholderImageScaleType="fitXY"
            fresco:viewAspectRatio="1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvProductAuth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="48小时内发货"

            android:textColor="@color/ddm_black_dark"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivProductAuth3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            fresco:actualImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/default_image"
            fresco:placeholderImageScaleType="fitXY"
            fresco:viewAspectRatio="1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvProductAuth3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="正品保证"
            android:textColor="@color/ddm_black_dark"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_arrow_right" />
    </LinearLayout>
</merge>