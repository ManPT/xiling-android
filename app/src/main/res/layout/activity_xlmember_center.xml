<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ddui.activity.XLMemberCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_backgroud_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300">

            <RelativeLayout
                android:id="@+id/rel_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_25">

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@drawable/white_arrow_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="会员中心"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/btn_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="会员说明"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_title"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@id/iv_head"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_member_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_my_week_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#88ffffff"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_25"
                        android:layout_gravity="right"
                        android:background="#88212121">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_role_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#ffefc987"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 折起"
                                android:textColor="#ffefc987"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_roleLevel"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_25" />

                        <TextView
                            android:id="@+id/tv_roleLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24" />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_348"
                android:layout_height="@dimen/dp_130"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_top_radius"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_23"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前成长值"
                        android:textColor="#ff202020"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/growth_value_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:textColor="#C38612"
                        android:textSize="@dimen/sp_17" />

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:background="@drawable/ic_arrow_right_black" />


                </LinearLayout>


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/bg_progress_member_select" />

                <TextView
                    android:id="@+id/tv_growth_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="差46.90成长值升级成为终身VIP会员(享受6.5折优惠)"
                    android:textColor="#ffaaaaaa"
                    android:textSize="@dimen/sp_10" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可用优惠券 "
                            android:textColor="#ff202020"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_coupon_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#C38612"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 张"
                            android:textColor="#ff202020"
                            android:textSize="@dimen/sp_13" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_couponDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff202020"
                            android:textSize="@dimen/sp_13" />


                        <ImageView
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="@dimen/dp_9"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/ic_arrow_right_black" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_week_card"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_101"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_member_week_card_vip"
            android:paddingLeft="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_week_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:text="周卡体验卡有效期剩余"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_week_card_expired_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_69"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:background="@drawable/icon_us_vip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="使用中"
                    android:textColor="#F2DFC1"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_week_card_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="#DCB982" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="优选周卡礼包"
                    android:textColor="#ff202020"
                    android:textSize="@dimen/sp_20" />


                <TextView
                    android:layout_width="@dimen/dp_87"
                    android:layout_height="@dimen/dp_27"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_strok_password"
                    android:gravity="center"
                    android:text="我的周卡包"
                    android:textColor="#ffdcb982"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/sliding_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                app:tl_indicator_color="#DCB982"
                app:tl_indicator_height="3dp"
                app:tl_indicator_width="@dimen/dp_26"
                app:tl_textSelectColor="#DCB982"
                app:tl_textUnselectColor="#333333"
                app:tl_textsize="@dimen/sp_16" />

            <com.xiling.ddui.view.AutofitViewPager
                android:id="@+id/viewpager_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="#DCB982" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="我要赚成长值"
                    android:textColor="#ff202020"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="成长值说明？"
                    android:textColor="#ffdcb982"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="#F5F5F5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@drawable/white_bg_radius_4"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_black_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黑卡会员直升条件"
                        android:textColor="#ff202020"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:text="永久享全场5.5折优惠"
                        android:textColor="#ffaaaaaa"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_recharge"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_strok_password"
                    android:gravity="center"
                    android:text="立即充值"
                    android:textColor="#ffdcb982"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_4"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_dot_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="单笔充值货款58000元"
                    android:textColor="#ff202020"
                    android:textSize="@dimen/sp_13" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0/1"
                    android:textColor="#ffaaaaaa"
                    android:textSize="@dimen/sp_13" />


            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_week_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的周卡记录"
                android:textColor="#ff202020"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_9"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_right_gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_12"
                android:text="查看详情"
                android:textColor="#ff202020"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>