<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiling.ddui.activity.CashWithdrawSecurityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <EditText
            android:id="@+id/et_trade_password"
            style="@style/DDMEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:hint="请输入正确交易密码"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/cb_password_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/password_switch_selector"
            android:button="@null"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_btn_forget_trade_password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:text="忘记交易密码"
        android:textColor="@color/ddm_red" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="安全问题 您的出生地址是？" />

    <EditText
        android:id="@+id/et_secret"
        style="@style/DDMEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请输入安全问题"
        android:paddingLeft="12dp" />

    <TextView
        android:id="@+id/tv_btn_forget_secret"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:text="忘记安全问题"
        android:textColor="@color/ddm_red" />

    <TextView
        android:id="@+id/tv_btn_next"
        style="@style/MyButton.DDMRed"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="34dp"
        android:text="下一步" />
</LinearLayout>