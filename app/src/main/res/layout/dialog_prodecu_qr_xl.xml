<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_top_radius8"
        android:orientation="vertical"
        app:layout_heightPercent="24%h">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_heightPercent="57.8%h"
            app:layout_paddingTopPercent="13.9%h">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/llShareWechat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_share_wechat"
                    app:layout_heightPercent="55.3%h"
                    app:layout_widthPercent="55.3%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:textColor="#ff202020"
                    app:layout_marginTopPercent="8.8%h"
                    app:layout_textSizePercent="12.7%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/llShareWechatCircle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_share_wechat_circle"
                    app:layout_heightPercent="55.3%h"
                    app:layout_widthPercent="55.3%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:textColor="#ff202020"
                    app:layout_marginTopPercent="8.8%h"
                    app:layout_textSizePercent="12.7%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/llShareDisk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_share_save"
                    app:layout_heightPercent="55.3%h"
                    app:layout_widthPercent="55.3%h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存图片"
                    android:textColor="#ff202020"
                    app:layout_marginTopPercent="8.8%h"
                    app:layout_textSizePercent="12.7%h" />
            </com.zhy.android.percent.support.PercentLinearLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F2F2F2"
            app:layout_marginTopPercent="8%h" />


        <TextView
            android:id="@+id/tv_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="取消"
            app:layout_paddingTopPercent="8.1%h"
            app:layout_textSizePercent="8.1%h" />

    </com.zhy.android.percent.support.PercentLinearLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/RelScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_bg_radius_4"
        android:paddingBottom="@dimen/dp_5"
        app:layout_heightPercent="58%h"
        app:layout_marginTopPercent="10%h"
        app:layout_widthPercent="41.2%h">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="#f7f7f7"
            android:scaleType="centerCrop"
            app:layout_heightPercent="66.7%h"
            app:layout_marginTopPercent="2%h"
            app:layout_widthPercent="66.7%h" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_thumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ff202020"
            android:textStyle="bold"
            app:layout_marginLeftPercent="2%h"
            app:layout_marginTopPercent="2%h"
            app:layout_textSizePercent="2.7%h"
            app:layout_widthPercent="40%h" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/img_thumb"
            android:layout_toRightOf="@id/tv_title"
            app:layout_heightPercent="29%h"
            app:layout_marginLeftPercent="3.9%h"
            app:layout_marginTopPercent="2%h"
            app:layout_widthPercent="22.6%h">

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                app:layout_heightPercent="78%h"
                app:layout_widthPercent="78%h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_qr"
                android:layout_centerHorizontal="true"
                android:text="微信识别二维码"
                android:textColor="#ff202020"
                app:layout_marginTopPercent="6.58%h"
                app:layout_textSizePercent="8.78%h" />

        </com.zhy.android.percent.support.PercentRelativeLayout>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            app:layout_marginLeftPercent="2%h"
            app:layout_marginTopPercent="13.36%h"
            android:textColor="#ff202020"
            app:layout_textSizePercent="3.4%h"/>


        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            app:layout_marginLeftPercent="16%h"
            app:layout_marginTopPercent="13.36%h"
            android:textColor="#ffaaaaaa"
            app:layout_textSizePercent="3.4%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentRelativeLayout>
