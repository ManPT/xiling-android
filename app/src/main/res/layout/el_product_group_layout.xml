<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dodomall.ddmall.shared.component.TagTextView
            android:id="@+id/tvTitle"
            style="@style/tvCommonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padingLeftRight"
            android:layout_marginRight="@dimen/padingLeftRight"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="正在加载....."
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:paddingTop="3dp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/marginTop"
            >

            <TextView
                android:id="@+id/itemPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/padingLeftRight"
                android:text="￥0.00"
                android:textColor="@color/redPrice"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/itemSalesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/padingLeftRight"
                android:layout_weight="1"
                android:text="销量"
                android:textColor="@color/text_gray"
                android:textSize="14sp"
                android:layout_gravity="bottom"

                />

            <TextView
                android:id="@+id/tvGoGroup"
                style="@style/MyButton.Red.Radius"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/padingLeftRight"
                android:text="去拼团"
                android:textSize="14sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>