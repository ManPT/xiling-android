<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_333"
    android:layout_height="@dimen/dp_500"
    tools:context=".ddui.fragment.InviteFriendsFragment">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_333"
        android:layout_height="@dimen/dp_500"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_50" />

    <LinearLayout
        android:layout_width="@dimen/dp_233"
        android:layout_height="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_63"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_184"
        android:layout_marginTop="@dimen/dp_252"
        android:textColor="#ffa13636"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>