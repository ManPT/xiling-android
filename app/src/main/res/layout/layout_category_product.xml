<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/sl_white_to_gray"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marginTop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/marginTop"
        android:layout_toRightOf="@id/ivProduct"
        android:orientation="vertical"
        android:paddingBottom="@dimen/marginTop"
        android:paddingTop="@dimen/marginTop"
        >

        <TextView
            android:id="@+id/itemTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="11111"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="1111"
                android:textColor="@color/redPrice"
                android:textSize="@dimen/text_middle"
                />

            <TextView
                android:id="@+id/itemMarkPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:text="2222"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/lineHorizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>