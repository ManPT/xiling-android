<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12">

    <RelativeLayout
        android:id="@+id/rel_week_card_backgroud"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_101">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_week_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#202020"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:background="@drawable/white_bg_radius_2_80"
                    android:gravity="center"
                    android:text="体验卡"
                    android:textColor="#ffc0a388"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_week_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_37"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_week_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#202020"
                android:textSize="@dimen/sp_18" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_Opening"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/btn_white_radius_10"
                    android:gravity="center"
                    android:text="立即开通"
                    android:textColor="#ffdcb982"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_3"
                    >

                    <ImageView
                        android:id="@+id/iv_us"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18" />

                    <TextView
                        android:id="@+id/tv_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:text="已使用"
                        android:textColor="#ff6d8891"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_invalid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31"
        android:layout_below="@id/rel_week_card_backgroud"
        android:background="@drawable/bg_week_card_invalid_bottom"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="已通过升级成为更高等级会员周卡费用转存到账户余额"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>
</RelativeLayout>
