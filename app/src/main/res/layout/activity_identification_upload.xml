<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ddui.activity.IdentificationUploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="请确保身份证照片清晰无光斑 边框完整 摆设背景干净"
            android:textColor="#ffaaaaaa"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_53">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_just"
                android:layout_width="@dimen/dp_187"
                android:layout_height="@dimen/dp_118" />


            <ImageView
                android:id="@+id/iv_just_default"
                android:layout_width="@dimen/dp_231"
                android:layout_height="@dimen/dp_137"
                android:background="@drawable/bg_identity_just" />

        </RelativeLayout>


        <TextView
            android:id="@+id/btn_upload_just"
            android:layout_width="@dimen/dp_153"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_round_dcb982_3"
            android:gravity="center"
            android:text="上传人像面照片"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_45">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_187"
                android:layout_height="@dimen/dp_118" />


            <ImageView
                android:id="@+id/iv_back_default"
                android:layout_width="@dimen/dp_231"
                android:layout_height="@dimen/dp_137"
                android:background="@drawable/bg_identity_back" />

        </RelativeLayout>


        <TextView
            android:id="@+id/btn_upload_back"
            android:layout_width="@dimen/dp_153"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/bg_round_dcb982_3"
            android:gravity="center"
            android:text="上传国徽面照片"
            android:textColor="#ffffffff"
            android:textSize="16sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bt_strok_password_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/text_password_selector"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        />


</RelativeLayout>