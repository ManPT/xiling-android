<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/layoutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg_windners"
            />

        <TextView
            android:id="@+id/integralInsufficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="恭喜您！"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/prizeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/integralInsufficient"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/padingLeftRight"
            android:layout_marginRight="@dimen/padingLeftRight"
            android:layout_marginTop="3dp"
            android:maxLines="3"
            android:maxWidth="230dp"
            android:text="获得三222"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turnplate_read"
                android:layout_marginRight="3dp"
                />

            <ImageView
                android:id="@+id/ivRe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/turnplate_re"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>