<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ddui.activity.UpdatePhoneNumberActivity">

    <TextView
        style="@style/TextView.SettingTopTip"
        android:text="填写输入新手机号码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="+86"
            android:textSize="@dimen/textSize_12" />


        <EditText
            android:id="@+id/et_phone_number"
            style="@style/DDMEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11" />

    </LinearLayout>

    <View style="@style/settings_row_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <EditText
            android:id="@+id/et_captcha"
            style="@style/DDMEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4" />

        <com.xiling.ddmall.shared.component.CaptchaBtn
            android:id="@+id/cb_captcha"
            style="@style/MyButton.DDMRed.Small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="获取验证码"
            android:textSize="12dp" />

    </RelativeLayout>


    <com.xiling.ddmall.shared.component.CaptchaBtn
        android:id="@+id/cb_captcha_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="12dp"
        android:text="获取语音验证码"
        android:textColor="@color/ddm_gray_dark"
        android:textSize="@dimen/textSize_12" />

    <TextView
        android:id="@+id/tv_btn_next"
        style="@style/MyButton.DDMRed"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:text="完成" />
</LinearLayout>