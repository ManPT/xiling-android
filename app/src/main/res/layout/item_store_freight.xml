<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:paddingLeft="@dimen/padingLeftRight"
              android:paddingRight="@dimen/padingLeftRight"
    >

    <TextView
        android:id="@+id/tvName"
        style="@style/tvCommonTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="155"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/etInitFreight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:maxLines="1"
        android:textSize="16sp"
        android:background="@drawable/bg_while_gray_corners_stroke"
        android:layout_marginLeft="25dp"
        />

    <EditText
        android:id="@+id/etAddFreight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:maxLines="1"
        android:textSize="16sp"
        android:background="@drawable/bg_while_gray_corners_stroke"
        android:layout_marginLeft="25dp"
        />

</LinearLayout>